<?xml version="1.0"?>
<launch>     
    <include file="$(find gobot_software)/launch/robot_infos_params.launch"/>
    <include file="$(find gobot_base)/launch/robot_sensors_params.launch"/>
    
	<node pkg="gobot_software" type="gobot_status" name="software_gobot_status" output="screen" respawn="true" />

    <!--laser to base tf frequency depends on the laser update rate-->
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.2 0.0 0.21 0 0 0 /base_link /base_laser 50" required="true"/>
    <!--
    <node pkg="urg_node" type="urg_node" name="hokuyo" output="screen" required="true">
        <param name="frame_id" value="base_laser" />
        <param name="angle_min" value="-2.0" />
        <param name="angle_max" value="2.0" />
        <param name="latency" value="-0.1" /> 
    </node>
    -->
    <node pkg="rplidar_ros" type="rplidarNode" name="rplidarNode" output="screen" required="true"/>
    <node pkg="gobot_base" type="sensors" name="base_sensors" output="screen" required="true"/>
    <node pkg="gobot_base" type="wheels" name="base_motors" output="screen" required="true"/>"/>
</launch>
