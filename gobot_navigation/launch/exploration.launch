<?xml version="1.0"?>
<launch>

  <node pkg="frontier_exploration" type="explore_client" name="explore_client"/>

  <node pkg="frontier_exploration" type="explore_server" name="explore_server">
    <param name="frequency" value="1.0"/>
    <!-- Should be less than sensor range -->
    <param name="goal_aliasing" value="2.0"/>

    <rosparam file="$(find gobot_navigation)/params/costmap_params_common.yaml" command="load" ns="explore_costmap" />
    <rosparam file="$(find gobot_navigation)/params/costmap_exploration.yaml" command="load" ns="explore_costmap" />
  </node>
</launch>

