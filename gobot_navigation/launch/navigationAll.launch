<?xml version="1.0"?>
<launch>
	<include file="$(find gobot_base)/launch/mapbase.launch"/>
    <include file="$(find gobot_navigation)/launch/amcl.launch"/>
    <include file="$(find gobot_navigation)/launch/move_base.launch"/>

    <include file="$(find gobot_recovery)/launch/gobot_recovery.launch"/>

    <include file="$(find gobot_software)/launch/robot_infos_params.launch"/>
    <param name="simulation" type="bool" value="true" />
	<node pkg="gobot_software" type="map_transfer" name ="map_transfer" output="screen" required="true"/>
	<node pkg="gobot_software" type="read_new_map" name ="read_new_map" output="screen" required="true"/>
	<node pkg="gobot_software" type="teleop" name ="teleop" output="screen" required="true"/>
	<node pkg="gobot_software" type="play_path" name="play_path" output="screen" required="true"/>
    <node pkg="gobot_software" type="robot_pos_transfer" name ="robot_pos_transfer" output="screen" required="true"/>
	<node pkg="gobot_software" type="command_system" name ="command_system" output="screen" required="true"/>
	<node pkg="gobot_software" type="send_laser_data" name="send_laser_data" output="screen" required="true"/>
	<!--<node pkg="gobot_software" type="isLocalized_optimized" name="isLocalized_optimized" output="screen" required="true"/>-->
	<node pkg="gobot_software" type="recover_position" name="recover_position" output="screen" required="true"/> 
    <node pkg="gobot_software" type="ping_server" name="ping_server" output="screen" required="true" />
    <node pkg="gobot_software" type="auto_docking" name="auto_docking" output="screen" required="true" />
    <node pkg="gobot_software" type="battery_check" name="battery_check" output="screen" required="true" />
</launch>
